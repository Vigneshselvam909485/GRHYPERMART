<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Appsignpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/secondary_bg__3_">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur lacus felis, ornare quis dictum a, scelerisque ac purus. Mauris laoreet lacus eget egestas accumsan."
                android:textColor="#D5D0D0"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textAlignment="center"
                android:padding="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signupbtn"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:background="@mipmap/signbtn"
                    android:text="Sign Up"
                    android:textSize="15dp"
                    android:layout_marginHorizontal="10dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signinbtn"
                    android:textAlignment="center"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/signbtn"
                    android:text="Sign In"
                    android:textSize="15dp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>