<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Appthirdpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:background="@drawable/secondary_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="200dp"
                android:src="@mipmap/counttow"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="45dp"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur
adipiscing elit, sed do eiusmod tempor
incididunt utaine kieoqueri minami."
                android:textColor="#D5D0D0"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textAlignment="center"
                android:paddingHorizontal="50dp"
                android:paddingVertical="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextpage2btn"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:background="@mipmap/btnpage"
                android:text="Next"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>