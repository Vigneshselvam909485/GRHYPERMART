<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Loginpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/applogo2"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="25dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Piczo"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="410dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/mobilenumber"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:hint="mobilenumber"
            android:textSize="16dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:background="@drawable/mobilenopagedesing"
            android:layout_marginHorizontal="30dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Logipagebutton"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@mipmap/loginpagbtn"
            android:text="Get OTP"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="40dp">

            <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/loginwithpassbtn"
                android:text="Login with Password"
                android:textSize="13dp"
                />
            <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/skiptologinbtn"
                android:text="Skip Login"
                android:textSize="13dp"
                android:layout_marginHorizontal="130dp"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>