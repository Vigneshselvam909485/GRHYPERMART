<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otppage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have sent you the otp code to +91 00000 00000
The code will expired at 00:17"
        android:textStyle="bold"
        android:textColor="#C1BDBD"
        android:layout_marginVertical="180dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginVertical="250dp"
        android:gravity="center">

        <EditText
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:id="@+id/otpbtn1"
            android:background="@drawable/otpicones_75"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:id="@+id/otpbtn2"
            android:background="@drawable/otpicones_75"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:id="@+id/otpbtn3"
            android:background="@drawable/otpicones_75"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:id="@+id/otpbtn4"
            android:background="@drawable/otpicones_75"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continuebutton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="342dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@mipmap/continuepage"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resendcodebtn"
        android:layout_marginVertical="380dp"
        android:textSize="15dp"
        android:layout_marginHorizontal="140dp"
        android:paddingTop="20dp"
        android:text="Resend the code"/>

</RelativeLayout>